<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
  
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="4">
              Email: yuyumeer@yuyumeer.com
          </th>
        </tr>
        <tr>
          <th colspan=3>Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
        <tr>
        <% @items.each do |item|%>
          <tr>
            <td><%=item.product.name%></td>
            <td><%=image_tag item.product.image.thumb, alt:item.product.name%></td> 
            <td><%=item.product.description%></td>
            <td><%=item.item_price_cents / 100.0%></td>
            <td><%=item.total_price_cents / (item.item_price_cents)%></td>
            <td><%=item.total_price_cents / 100.0%></td>
          </tr>
        <% end %>
        </tr>
      </thead>
      <tbody>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL: <%= @order.total_cents/100.0 %>
          </th>
          <th>  
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
