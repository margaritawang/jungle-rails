<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <h2>Customer Reviews </h2>
    <% @reviews.reverse.each do |review|%>
      <div>
      <%= review.rating.times do |i|%>
      <%= fa_icon "star"%>
      <% end %> Stars
      <h4>Description: <%= review.description%></h4>
      </div>
      <% if review.user_id == session[:user_id]%>
        <%= link_to product_review_remove_review_path(review_id: review.id, product_id: params[:id]), class: 'btn btn-xs btn-danger', method: :delete do %>
          Delete Review
        <% end %>
      <% end %>
    <% end %>    

<% if current_user %>
  <h2>Write a review:</h2>
  
  <%= form_for [@product, Review.new] do |form| %>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="form-group">
    <%= form.label :rating %>
    <%= form.select :rating, [1, 2, 3, 4, 5] %>
    </div>

  <%= form.submit "Submit" %>
  <% end %>
<% end %>

  </article>
</section>
